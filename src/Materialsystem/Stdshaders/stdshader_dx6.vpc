$Include "$SRCDIR\vpc_scripts\source_dll_win32_base.vpc"

$Configuration	"Debug"
{
	$General
	{
		$OutputDirectory		"Debug_dx6"			
		$IntermediateDirectory	"Debug_dx6"			
	}
}

$Configuration	"Release"
{
